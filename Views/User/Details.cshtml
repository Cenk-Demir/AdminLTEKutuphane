@model AdminLTEKutuphane.Models.User
@{
    ViewData["Title"] = "Kullanıcı Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Kullanıcı Detayları</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Ad</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Soyad</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">E-Posta</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Rol</dt>
        <dd class="col-sm-9">@Model.Role</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div>
