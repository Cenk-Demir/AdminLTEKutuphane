@model AdminLTEKutuphane.Models.Book
@{
    ViewData["Title"] = "Kitap Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <h1 class="m-0">Kitap Detayları</h1>
    </div>
</div>

<div class="container-fluid mt-3">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Kitap Adı</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Yazar</dt>
                <dd class="col-sm-9">@Model.Author</dd>

                <dt class="col-sm-3">ISBN</dt>
                <dd class="col-sm-9">@Model.ISBN</dd>

                <dt class="col-sm-3">Yayınevi</dt>
                <dd class="col-sm-9">@Model.Publisher</dd>

                <dt class="col-sm-3">Yayın Yılı</dt>
                <dd class="col-sm-9">@Model.PublicationYear</dd>

                <dt class="col-sm-3">Sayfa Sayısı</dt>
                <dd class="col-sm-9">@Model.PageCount</dd>

                <dt class="col-sm-3">Kategori</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Raf Numarası</dt>
                <dd class="col-sm-9">@Model.ShelfNumber</dd>

                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">
                    @if (Model.IsAvailable)
                    {
                        <span class="badge bg-success">Müsait</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Ödünç Verildi</span>
                    }
                </dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Oluşturulma Tarihi</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                @if (Model.UpdatedAt.HasValue)
                {
                    <dt class="col-sm-3">Güncellenme Tarihi</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</dd>
                }
            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Düzenle
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sil
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div> 